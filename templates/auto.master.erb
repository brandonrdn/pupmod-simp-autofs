<%
  t_valid_map_types = [
    "file",
    "program",
    "yp",
    "nisplus",
    "hesiod",
    "ldap",
    "ldaps",
    "multi"
  ]

  t_entry = "#{@mount_point}\t"

  unless @map_type.empty?
    unless t_valid_map_types.include?(@map_type)
      raise Puppet::ParseError.new("Invalid map type '#{@map_type}' specified.")
    end
    t_entry << " #{@map_type}"

    unless @map_format.empty?
      t_entry << ",#{@map_format}"
    end

    t_entry << ":"
  end

  t_entry << "#{@map_name} #{@options}"
-%>
<%= t_entry %>
